;
; char *NomDeBase( char *nom )
;
	CSECT	text
;
_NomDeBase:
	move.l	4(sp),a0        ; a0 = nom
	move.l	a0,a1
nbbcle:
	move.b	(a0)+,d0        ; fin de chaine ?
	beq.s	nbfin
	cmp.b	#':',d0         ; ":" ?
	beq.s	nbset
	cmp.b	#'/',d0         ; "/" ?
	bne.s	nbbcle
nbset:
	move.l	a0,a1
	bra.s	nbbcle
nbfin:
	move.l	a1,d0
	rts
;
; void BeepOn( char *data, long periode )
;
_BeepOn:
	move.l	4(sp),$DFF0A0
	move.w	#0001,$DFF0A4
	move.l	8(sp),d0
	move.w	d0,$DFF0A6
	move.w	#0050,$DFF0A8
	move.w	#$8201,$DFF096
	rts
;
; void BeepOff( void )
;
_BeepOff:
	move.w	#0001,$DFF096
	rts
;
	XDEF	_BeepOn
	XDEF	_BeepOff
	XDEF	_NomDeBase
	END

