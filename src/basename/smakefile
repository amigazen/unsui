# Basename command SMakefile for Unsui POSIX runtime

# Tools
CC = sc
LD = slink
RM = delete
CFLAGS = STRIPDEBUG NODEBUG LIB sc:lib/sc.lib LIB lib:small.lib BATCH NOICONS
LDFLAGS = LIB sc:lib/sc.lib LIB lib:small.lib NOICONS
SCOPTIONS = DATA=NEAR CODE=NEAR NOSTACKCHECK COMMENTNEST STRUCTUREEQUIVALENCE OPTIMIZE MAP NOVERSION NOICONS UTILITYLIBRARY INCLUDEDIR=include: INCLUDEDIR=/common

# Object files for basename
OBJS = sc:lib/cres.o basename.o /common/common.o /common/getopt.o

# Main target
all: basename

# Build basename command
basename: $(OBJS)
	$(LD) $(LDFLAGS) FROM $(OBJS) TO basename

# Compile source files
.c.o:
	$(CC) $(SCOPTIONS) $< TO $@

# Header dependencies
basename.o: basename.c basename.h /common/common.h /common/getopt.h

# Clean target
clean:
	-$(RM) \#?.(lib|o|do|nbo|dnbo|gst|lst|map) basename

# Install target
install: basename
	copy basename //SDK/C/basename
